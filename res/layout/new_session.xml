<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:gravity="center"
    android:orientation="vertical" >                
                
        <Button
            android:id="@+id/btn_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="Start"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_weight="0.5"
            android:text="Stop"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/kmeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:paddingTop="50sp"
            android:text="0.00"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/caloriesValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/calories"
            android:layout_alignBottom="@+id/calories"
            android:layout_toRightOf="@+id/calories"
            android:paddingLeft="10sp"
            android:text="0.00"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/chronometer"
            android:layout_marginLeft="60dp"
            android:text="@string/calories"
            android:textStyle="bold"
            android:textSize="20sp"  />

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kmeter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:gravity="center_horizontal"
            android:paddingLeft="10sp"
            android:textSize="20sp"  />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/chronometer"
            android:layout_toLeftOf="@+id/chronometer"
            android:paddingLeft="15sp"
            android:text="@string/timer"
            android:textSize="20sp" 
            android:textStyle="bold" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/timer"
            android:layout_centerVertical="true"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="xx"
            android:textColor="@color/temperature_color"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/sessionWeatherIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/temperature"
            android:layout_alignRight="@+id/caloriesValue"
            android:contentDescription="@string/logo_description" />

    </RelativeLayout>